<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inventory">

    <!-- Top blue bar + text -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="0sp"
        android:layout_height="38sp"
        android:background="@color/ether_blue"
        android:fontFamily="@font/comfortaa_bold"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="@string/inventory"
        android:textAlignment="center"
        android:textColor="@color/ether_text"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Bottom blue bar -->
    <View
        android:id="@+id/view2"
        android:layout_width="0sp"
        android:layout_height="30sp"
        android:background="@color/ether_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_marginTop="60sp"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TableRow>
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For the month of:"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/ether_text"
            android:gravity="center"
            android:textSize = "20dp"
            android:textStyle="bold"/>


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="210dp"
            android:layout_height="fill_parent"
            android:fontFamily="@font/comfortaa_bold"
            android:backgroundTint="#BBBBBC"
            android:entries="@array/month"
            android:gravity="center"
            android:padding="5dp" />
        </TableRow>
    </TableLayout>


    <!-- Table of finance -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90sp"
        android:paddingLeft="5sp"
        android:paddingRight="5sp">


        <TableRow android:background="@color/ether_blue" android:padding="10dp">

            <TextView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date" />

            <TextView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Item" />
            <TextView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Value" />

        </TableRow>
        <TableRow android:background="#F0F7F7" android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />

        </TableRow>
        <TableRow android:background="#F0F7F7" android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />


        </TableRow>
        <TableRow android:background="#F0F7F7" android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />


        </TableRow>

        <TableRow android:background="#F0F7F7" android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />

        </TableRow>

        <TableRow android:background="#F0F7F7" android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1/1/2021" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Balance" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$1,000" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>